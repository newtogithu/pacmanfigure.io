<script>
var c = document.getElementById("myCanvas");
var ctx = c.getContext("2d");

var pacmanfigure= 
				ctx.fillStyle = "grey";
				ctx.fillRect(0,0,1000,110);

				ctx.beginPath();
				ctx.lineCap = "round";
				ctx.moveTo(0, 110);
				ctx.lineTo(1000, 100);
				ctx.lineWidth = 5;
				ctx.strokeStyle = "#00008b ";
				ctx.stroke();
				ctx.closePath();

				ctx.beginPath();
				ctx.lineCap = "round";
				ctx.moveTo(0, 5);
				ctx.lineTo(1000, 1);
				ctx.strokeStyle = "#00008b";
				ctx.stroke();
				ctx.closePath();

				ctx.beginPath();
				ctx.arc(500, 54, 45, 0, 2 * Math.PI);
				ctx.fillStyle = "yellow";
				ctx.fill();


				ctx.beginPath();
				ctx.arc(500, 54, 44, 0, 1 * Math.PI);
				ctx.fillStyle = "black";
				ctx.fill();



				ctx.beginPath();
				ctx.arc(500, 54, 45, 0, 0.9 * Math.PI);
				ctx.fillStyle = "yellow";
				ctx.fill();



				ctx.beginPath();
				ctx.arc(480, 34, 9, 0, 2 * Math.PI);
				ctx.fillStyle = "black";
				ctx.fill();

				ctx.beginPath();
				ctx.arc(350, 70, 30, 0, 2 * Math.PI);
				ctx.fillStyle = "red";
				ctx.fill();
				ctx.strokeStyle = "black";
				ctx.stroke();
				ctx.closePath();

				ctx.beginPath();
				ctx.arc(300, 60, 30, 0, 2 * Math.PI);
				ctx.fillStyle = "red";
				ctx.fill();
				ctx.strokeStyle = "black";
				ctx.stroke();
				ctx.closePath();

				ctx.beginPath();
				ctx.moveTo(310, 30);
				ctx.quadraticCurveTo(300, 5, 350, 40);
				ctx.stroke();

				ctx.beginPath();
				ctx.arc(100, 50, 30, 0, 2 * Math.PI);
				ctx.fillStyle = "#ffffed";
				ctx.fill();
				ctx.strokeStyle = "black";
				ctx.stroke();
				ctx.closePath();

				ctx.beginPath();
				ctx.arc(199, 50, 30, 0, 2 * Math.PI);
				ctx.fillStyle = "#ffffed" ;
				ctx.fill();
				ctx.strokeStyle = "black";
				ctx.stroke();
				ctx.closePath();


</script> 

